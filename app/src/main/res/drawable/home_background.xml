<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape>
            <solid android:color="#20000000"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
    <!-- Background Layer -->
    <item
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"
        android:bottom="2dp">
        <shape>
            <solid android:color="@android:color/white"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
</layer-list>