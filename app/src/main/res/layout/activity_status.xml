<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Authenticate.Opening.StatusActivity">

    <ImageView
        android:id="@+id/ellipse1"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-50dp"
        android:foregroundGravity="left"
        android:src="@drawable/ellipse1" />

    <ImageView
        android:id="@+id/ellipse2"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-58dp"
        android:layout_marginBottom="116dp"
        android:foregroundGravity="right"
        android:src="@drawable/ellipse2" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-35dp"
        app:cardCornerRadius="50dp"
        android:id="@+id/hamil">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle"
            android:orientation="vertical"></LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:layout_marginStart="80dp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center_vertical"
            android:text="Apa\nStatus\nAnda ?"
            android:textColor="@color/white"
            android:textSize="30dp">
        </TextView>

        <androidx.cardview.widget.CardView
            android:id="@+id/rencana"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="350dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:id="@+id/gambarInformation1"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@null"
                            android:backgroundTint="#CCCFFF"
                            android:importantForAccessibility="no"
                            android:importantForAutofill="yes"
                            android:scaleType="centerCrop"
                            android:src="@drawable/family" />
                    </androidx.cardview.widget.CardView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp">
                        <TextView
                            android:id="@+id/ketentuanpeminjaman"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Saya sedang merencanakan kehamilan"
                            android:textColor="@color/greentosca"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins"/>
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>



    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="450dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/gambarhamil"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@null"
                        android:backgroundTint="#CCCFFF"
                        android:importantForAccessibility="no"
                        android:importantForAutofill="yes"
                        android:scaleType="centerCrop"
                        android:src="@drawable/pregnant" />
                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp">
                    <TextView
                        android:id="@+id/keteranganhamil"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Saya sedang\nhamil"
                        android:textColor="@color/greentosca"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins"/>
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="580dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="50dp"
        android:id="@+id/anak">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/gambaranak"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@null"
                        android:backgroundTint="#CCCFFF"
                        android:importantForAccessibility="no"
                        android:importantForAutofill="yes"
                        android:scaleType="centerCrop"
                        android:src="@drawable/children" />
                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp">
                    <TextView
                        android:id="@+id/keterangananak"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Saya sudah memiliki anak"
                        android:textColor="@color/greentosca"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins"/>
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>